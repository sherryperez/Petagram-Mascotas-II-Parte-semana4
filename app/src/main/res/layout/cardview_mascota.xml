<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="16dp">

    <android.support.v7.widget.CardView
        android:id="@+id/cv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="@dimen/cardview_elevation"
        app:cardCornerRadius="@dimen/cardview_radius">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp">

            <ImageView
                android:id="@+id/imagenPerro"
                android:layout_width="match_parent"
                android:layout_height="@dimen/alto_tam_img_perro"
                android:layout_gravity="center"
                android:scaleType="fitXY"
                android:src="@drawable/perro1" />

            <ImageView
                android:id="@+id/iconoHueso"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/imagenPerro"
                android:src="@drawable/dog_bone_48" />

            <TextView
                android:id="@+id/nombre_perro"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/imagenPerro"
                android:layout_marginLeft="@dimen/nombre_perro_margin"
                android:layout_toRightOf="@id/iconoHueso"
                android:text="nombre"
                android:textSize="25dp" />

            <ImageView
                android:id="@+id/iconoHuesoColor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignEnd="@id/imagenPerro"
                android:layout_alignRight="@id/iconoHueso"
                android:layout_below="@id/imagenPerro"
                android:src="@drawable/dog_bone_48_color" />

            <TextView
                android:id="@+id/rating"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/imagenPerro"
                android:layout_toLeftOf="@id/iconoHuesoColor"
                android:text="5"
                android:textSize="25dp" />


        </RelativeLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>